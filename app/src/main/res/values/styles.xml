<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/drawable_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_bg_color</item>
        <item name="android:elevation">@dimen/d2</item>
        <!--toolbar icon menu text color-->
        <item name="actionMenuTextColor">@color/text_color_1</item>
        <item name="android:actionMenuTextColor">@color/text_color_1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="titleTextAppearance">@style/ToolbarTextView</item>
        <item name="contentInsetStartWithNavigation">@dimen/d8</item>
    </style>

    <style name="ToolbarTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/f20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTxtStyle">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:textColorHint">@color/text_color_2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/d12</item>
        <item name="android:layout_marginStart">@dimen/d8</item>
        <item name="android:layout_marginEnd">@dimen/d8</item>
        <item name="android:gravity">start|center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HeadingTxtStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">@dimen/f18</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">@dimen/d12</item>
        <item name="android:layout_marginStart">@dimen/d32</item>
        <item name="android:layout_marginEnd">@dimen/d32</item>
    </style>


    <style name="DescTxtStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/f16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/d4</item>
        <item name="android:layout_marginStart">@dimen/d16</item>
        <item name="android:layout_marginEnd">@dimen/d16</item>
    </style>

    <style name="SmallDescTxtStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/f12</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/d12</item>
        <item name="android:layout_marginStart">@dimen/d16</item>
        <item name="android:layout_marginEnd">@dimen/d16</item>
    </style>

    <style name="EmptyTxtStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">@dimen/f20</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_margin">@dimen/d16</item>
    </style>

</resources>
